<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd" >
<configuration>
	<settings>
		<setting name="jdbcTypeForNull" value="NULL" /><!-- 비어있는 값이 들어오면 
			null로 사용할 것 -->
	</settings>

	<typeAliases>
		<typeAlias type="com.project.bmp.user.model.vo.User"
			alias="User" />
		<typeAlias type="com.project.bmp.post.model.vo.Post"
			alias="Post" />
		<typeAlias type="com.project.bmp.post.model.vo.ListInfo"
			alias="ListInfo" />
		<typeAlias type="com.project.bmp.post.model.vo.Like"
			alias="Like" />
	</typeAliases>

	<mappers>
		<mapper resource="mapper/userMapper.xml" />
		<mapper resource="mapper/postMapper.xml" />
	</mappers>

</configuration>
